<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to gist_sessions_path, class: "navbar-brand" do %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- Search form -->
  <div class="searchbar-and-avatar d-flex justify-content-between">
    <div class = "searchbox-custom pr-5 pt-3">
      <div class="form-group row">
        <div class="col-10 search-form">
          <%= form_tag gist_sessions_path, method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a gist you like !"
          %>
        </div>
        <div class="col-2 search-button">
           <%= submit_tag "Search", class: "btn searchbtn" %>
        <% end %>
        </div>
      </div>
    </div>


    <div class="collapse navbar-collapse pl-4" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown custom-avatar">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" },'aria-haspopup': true, 'aria-expanded': false  %>
            <% else %>
              <%= image_tag "avatar_default.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Modify profile", edit_user_registration_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
